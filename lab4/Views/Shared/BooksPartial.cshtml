<div class="row row-cols-1 row-cols-md-3 g-1">
    @{
        foreach (Book book in Model.AllBooks)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="@book.Img" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h6 class="card-title">@book.BookName</h6>
                        <p class="card-text">@book.Author</p>
                        <p class="card-text">@book.Price.ToString("# руб")</p>
                        <a class="btn btn-primary" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.BookID">Добавить в корзину</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
